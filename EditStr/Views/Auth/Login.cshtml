@using Core.DTO
@model UserLoginDto
@{
    Layout = "";
    ViewData["Title"] = Localizer["Tittle"];
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/images/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    <div class="container-fluid vh-100 d-flex justify-content-center align-items-center bg-light">
        <div class="col-11 col-sm-8 col-md-6 col-lg-4">
            <div class="shadow-sm p-4 bg-white rounded-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <img src="~/images/logo.png" alt="EditStr Logo" class="img-fluid" style="width: 150px; object-fit: cover;">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle py-1 px-2" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            🌐 @Localizer["Language"]
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                            <li><a class="dropdown-item" href="/Language/SetLanguage?culture=tr-TR&returnUrl=@Context.Request.Path">🇹🇷 Turkish</a></li>
                            <li><a class="dropdown-item" href="/Language/SetLanguage?culture=en-US&returnUrl=@Context.Request.Path">🇬🇧 English</a></li>
                        </ul>
                    </div>
                </div>
                <form method="post" action="">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control rounded-3" id="email" name="Email" placeholder="Email" required>
                        <label for="email">Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control rounded-3" id="password" name="Password" placeholder="@Localizer["Password"]" required>
                        <label for="password">@Localizer["Password"]</label>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="rememberMe" asp-for="@Model.RememberMe">
                        <label class="form-check-label" for="rememberMe">@Localizer["Remember"]</label>
                    </div>
                    @if (TempData["Message"] is not null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["Message"]
                        </div>
                    }
                    <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold">@Localizer["Login"]</button>
                </form>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>